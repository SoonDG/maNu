<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:color="@color/MyNuWhite">
        <layer-list>
            <item android:gravity="center_horizontal">
                <shape android:shape="rectangle">
                    <size android:width="50dp" android:height="5dp"></size>
                    <solid android:color="@color/MyNuWhite"></solid>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false" android:color="@color/MyNuGray">
        <layer-list>
            <item android:gravity="center_horizontal">
                <shape android:shape="rectangle">
                    <size android:width="50dp" android:height="5dp"></size>
                    <solid android:color="@color/MyNuGray"></solid>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>