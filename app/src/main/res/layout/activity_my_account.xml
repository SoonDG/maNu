<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activity.MyAccountActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MyNuGreen"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="회원 정보"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/tablelayout_style">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textview_style2"
                android:gravity="center"
                android:text="아이디"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"></TextView>

            <TextView
                android:id="@+id/my_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="right"
                android:textSize="20sp"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textview_style2"
                android:gravity="center"
                android:text="비밀번호"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"></TextView>

            <TextView
                android:id="@+id/my_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="right"
                android:textSize="20sp"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textview_style2"
                android:gravity="center"
                android:text="나이"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"></TextView>

            <TextView
                android:id="@+id/my_age"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="right"
                android:textSize="20sp"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textview_style2"
                android:gravity="center"
                android:text="성별"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"></TextView>

            <TextView
                android:id="@+id/my_gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="right"
                android:textSize="20sp"></TextView>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/to_Edit_Information_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="회원 정보 수정"
        android:textColor="@color/white"
        android:background="@drawable/button_style2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/withdrawal_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="회원 탈퇴"
        android:textColor="@color/white"
        android:background="@drawable/button_style2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_Edit_Information_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>