<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="Activity.PopupActivity.PopupCheckPasswordActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/popup_Check_Password_Title"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/textview_style2"
            android:gravity="center"
            android:text="비밀번호 확인"
            android:textColor="#ffffff"
            android:textSize="15sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="비밀번호: "
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/check_Password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_text_style"
            android:inputType="textPassword"
            android:textColor="@color/MyNuWhite"></EditText>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/check_Password_btn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_style4"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/MyNuWhite"
            android:textSize="20sp"></Button>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancle_Check_Password_btn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_style3"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/MyNuMediumGray"
            android:textSize="20sp"></Button>
    </LinearLayout>
</LinearLayout>