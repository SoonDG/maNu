<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Activity.PopupActivity.PopupEatFoodEditActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/popup_Eat_Food_Edit_Title"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/textview_style2"
            android:gravity="center"
            android:text="음식 정보 수정"
            android:textColor="#ffffff"
            android:textSize="15sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_Food_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/textview_style"
            android:text=""
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">
        <Spinner
            android:id="@+id/eat_Food_Serving_Spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/spinner_style"
            android:theme="@style/SpinnerTheme"
            android:textAlignment="center"></Spinner>

        <TextView
            android:id="@+id/edit_Serving_Lable"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="3"
            android:background="@drawable/textview_style"
            android:gravity="center"
            android:text="인분"
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eat_food_edit_kcal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/eat_food_edit_carbs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/eat_food_edit_protein"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/eat_food_edit_fat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/eat_food_edit_sugars"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/eat_food_edit_sodium"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/eat_food_edit_CH"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/eat_food_edit_Sat_fat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/eat_food_edit_trans_fat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eat_Food_Edit_btn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_style4"
            android:gravity="center"
            android:text="수정"
            android:textColor="@color/MyNuWhite"
            android:textSize="15sp"
            android:layout_weight="1"></androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eat_Food_Delete_btn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_style4"
            android:gravity="center"
            android:text="삭제"
            android:textColor="@color/MyNuWhite"
            android:textSize="15sp"
            android:layout_weight="1"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancle_Eat_Food_Edit_btn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="@drawable/button_style3"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/MyNuMediumGray"
            android:textSize="15sp"></androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
</LinearLayout>