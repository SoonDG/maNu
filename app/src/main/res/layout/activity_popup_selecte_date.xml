<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Activity.PopupActivity.PopupFoodEatActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/popup_Selecte_Date_Title"
            android:layout_width="match_parent"
            android:layout_height="53sp"
            android:background="@drawable/textview_style2"
            android:gravity="center"
            android:text="날짜 선택"
            android:textColor="#ffffff"
            android:textSize="15sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">

        <Spinner
            android:id="@+id/date_Year_Spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="년"
            android:textSize="20sp"></TextView>

        <Spinner
            android:id="@+id/date_Month_Spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="월"
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:id="@+id/selecte_Date_btn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_style4"
            android:gravity="center"
            android:text="선택"
            android:textColor="@color/MyNuWhite"
            android:textSize="15sp"
            android:layout_weight="1"></Button>

        <Button
            android:id="@+id/cancle_Selecte_Date_btn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="@drawable/button_style3"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/MyNuMediumGray"></Button>
    </LinearLayout>

</LinearLayout>