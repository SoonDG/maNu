<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.My_First_Project" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/MyNuGray</item>
        <item name="colorPrimaryDark">@color/MyNuGray</item>
        <item name="android:windowBackground">@color/MyNuBlack </item>
        <item name="android:textColor">@color/MyNuWhite</item>
        <item name="android:textColorPrimary">@color/MyNuWhite</item>
        <item name="android:textColorHint">@color/MyNuGray</item>
        <item name="android:navigationBarColor">@color/MyNuGray</item>
        <item name="android:titleTextColor">@color/MyNuWhite</item>
    </style>

    <!-- 로딩 창(SplashActivity 전용 테마)-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/mynu_background</item>
    </style>

    <!-- Dialog 전용 테마-->
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/MyNuGray</item>
        <item name="colorPrimaryDark">@color/MyNuGray</item>
        <item name="android:windowBackground">@color/MyNuBlack </item>
        <item name="android:textColor">@color/MyNuWhite</item>
        <item name="android:textColorPrimary">@color/MyNuWhite</item>
        <item name="android:textColorHint">@color/MyNuGray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/MyNuGray</item>
        <item name="colorPrimaryDark">@color/MyNuGray</item>

        <!--하단 버튼 색-->
        <item name="colorOnPrimary">@color/MyNuWhite</item>

        <item name="android:windowBackground">@color/MyNuBlack</item>
        <item name="android:textColor">@color/MyNuWhite</item>
        <item name="android:textColorPrimary">@color/MyNuWhite</item>

        <!-- 오늘 날짜 색과 선택된 날짜 표시(원형) 색-->
        <item name="colorAccent">@color/MyNuMediumGray</item>
    </style>
</resources>