<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.My_First_Project" parent="Theme.AppCompat.Light">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.My_First_Project" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/MyNuGray</item>
        <item name="colorPrimaryDark">@color/MyNuBlack</item>
        <item name="android:windowBackground">@color/MyNuBlack </item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/MyNuMediumGray</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:navigationBarColor">@color/MyNuGray</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <!-- 로딩 창(SplashActivity 전용 테마)-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/mynu_background</item>
    </style>

    <!-- Dialog 전용 테마-->
    <style name="NoTitleBarDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#464646</item>
        <item name="colorPrimaryDark">@color/MyNuBlack</item>
        <item name="android:windowBackground">@color/MyNuBlack </item>
        <item name="android:textColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>