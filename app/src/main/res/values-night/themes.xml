<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.My_First_Project" parent="Theme.AppCompat.Light">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.My_First_Project" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/MyNuGray</item>
        <item name="colorPrimaryDark">@color/MyNuBlack</item>
        <item name="android:windowBackground">@color/MyNuBlack </item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:navigationBarColor">@color/MyNuGray</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="SplashTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/mynu_background</item>
    </style>

    <style name="DialogTheme" parent ="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/dialogColor</item>
        <item name="background">@color/black</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorPrimary">#464646</item>
    </style>
</resources>