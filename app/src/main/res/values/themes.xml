<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.My_First_Project" parent="Theme.AppCompat.Light">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.My_First_Project" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/MyNuGreen</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- 로딩 창(SplashActivity 전용 테마)-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/mynu_background</item>
    </style>

    <!-- Dialog 전용 테마-->
    <style name="NoTitleBarDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#07000000</item>
        <item name="android:textColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>