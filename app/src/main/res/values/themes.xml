<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.My_First_Project" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/MyNuMediumGray</item>
        <item name="colorPrimaryDark">@color/MyNuMediumGray</item>
        <item name="android:windowBackground">@color/white </item>
        <item name="android:textColor">@color/MyNuBlack</item>
        <item name="android:textColorPrimary">@color/MyNuBlack</item>
        <item name="hintTextColor">@color/MyNuGray</item>
        <item name="android:navigationBarColor">@color/MyNuMediumGray</item>
        <item name="android:titleTextColor">@color/MyNuBlack</item>
    </style>

    <!-- 로딩 창(SplashActivity 전용 테마)-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/mynu_background</item>
    </style>

    <!-- Dialog 전용 테마-->
    <style name="NoTitleBarDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/MyNuMediumGray</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/white </item>
        <item name="android:textColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!--상단 바 색-->
        <item name="colorAccent">@color/MyNuGray</item>

        <!-- 선택한 날짜 표시 색-->
        <item name="colorControlActivated">@color/MyNuGray</item>
        <item name="colorControlHighlight">@color/MyNuGray</item>

        <!-- 취소/확인 버튼 색 -->
        <item name="android:textColor">@color/MyNuBlack</item>
    </style>
</resources>